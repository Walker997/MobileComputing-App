<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bed4"
    tools:context=".MainActivity">

    <!--network status icon-->
    <!--network status text-->
    <TextView
    android:id="@+id/conStatusTv"
    android:textColor="#000"
    android:textSize="15sp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="45dp"
    android:layout_marginRight="35dp"/>
    <!--button to check network status-->
    <Button
        android:id="@+id/conStatusBtn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Check Network" />

    <TextView
        android:id="@+id/btStatusTv"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="35dp"/>
    <!--button to check network status-->
    <Button
        android:id="@+id/btStatusBtn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:text="Check Bluetooth" />

    <Button
        android:id="@+id/accelerometer"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:text="Accelerometer" />

    <Button
        android:id="@+id/photos"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Photos" />

    <Button
        android:id="@+id/maps"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:text="Maps" />

    <Button
        android:id="@+id/exit"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="#f54242"
        android:text="Exit"
        android:onClick="clickExit"/>

</RelativeLayout>